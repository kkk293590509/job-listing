<h1> Edit a job </h1>

    <%= simple_form_for [:admin, @job ] do |f| %>

    <%= f.input :title, :label => "招聘职位"%>
    <%= f.input :description, :label => "岗位描述"%>
    <%= f.input :contact_email, :label => "工作地点"%>
    <%= f.input :wage_lower_bound, :label => "薪资下限" %>
    <%= f.input :wage_upper_bound, :label => "薪资上限" %>
    <%= f.input :contact_email, :label => "联系邮箱" %>
    <%= f.submit "Submit" %>
    <%= f.input :is_hidden %>
<% end %>
