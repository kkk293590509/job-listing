<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
    <% @jobs.each do |job| %>
      <tr>
        <td>
            <%= link_to(job.title, admin_job_path(job)) %>

            <%= render_job_status(job) %>

            </td>
              <td>
              <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-primary") %>

              <%= link_to("Destroy", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-default", :data => { :confirm => "Are you sure?" }) %>
              </td>
          <td>
            <%= job.created_at %>
        </td>
      </tr>
    <% end %>
</table>
